@model bloggers.DTO.FriendDTO;

<!-- Modal -->
<div class="modal fade" id="FriendModal" tabindex="-1" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
                <div class="modal-header">
                        <h5 class="modal-title" id="modalTitleId">Add Friend</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <form asp-action="Index" id="createFriendForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="Id" class="form-control" hidden/>
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Name: </label>
                            <input type="text" class="form-control" id="Name" readonly/>
                        </div>
                        <div class="form-group">
                            <input asp-for="BloggerId" class="form-control" hidden/>
                        </div>
                        <div class="form-group">
                            <label class="control-label">New Friend</label>
                            <select asp-for="FriendId" class ="form-control" asp-items="@(new SelectList(ViewBag.FriendId,"Value", "Text"))"></select>
                            <span asp-validation-for="FriendId" class="text-danger"></span>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-success" id="btnSaveFriend">Add Friend</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/friend/friend.js"></script>
}

